<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_height="160dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relate1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edged_rectangle">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_sn"
                android:text="1"
                android:textColor="@color/white_fade"/>

        </RelativeLayout>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/dialer"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:tint="@color/bg_screen2"
            android:src="@drawable/ic_call"/>


    </RelativeLayout>
    <RelativeLayout

        android:layout_marginLeft="45dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contactTitle"
            android:layout_centerHorizontal="true"
            android:text="Teku Hospital"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorAccent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contactAddress"
            android:layout_marginLeft="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/contactTitle"
            android:textSize="15sp"
            android:text="Kathmandu"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relateAddress"
            android:layout_below="@id/contactAddress">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/contactNumber"
                android:layout_height="wrap_content"
                android:text="Tel 1 : 012525354 \nTel 2 : 012524859 \nTel 3 : 018598885"/>

        </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relateAddress"
                android:id="@+id/enchargeTitle"
                android:text="Encharge :   "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relateAddress"
            android:id="@+id/enchargeText"
            android:layout_toRightOf="@+id/enchargeTitle"
            android:text="Ram Thapa \n Shyam Singh Basnet"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
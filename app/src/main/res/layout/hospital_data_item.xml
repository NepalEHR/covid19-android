<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_height="200dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/iconId"
            android:src="@drawable/ic_010_hospital"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bayalpata Hospital"
            android:layout_centerHorizontal="true"
            android:id="@+id/hospitalName"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/bg_screen2"/>
        <LinearLayout
            android:layout_below="@+id/iconId"
            android:id="@+id/linearLine1"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/totalScreened"
                    android:src="@drawable/ic_screened"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Screened"
                    style="@style/statTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/totalScreened"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/screenText"
                    android:textColor="@color/white_fade"
                    android:backgroundTint="@color/stat_screen3"
                    style="@style/cardText"
                    android:gravity="center"
                    android:background="@drawable/circle_drawable"
                    android:text="0"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/totalNegative"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/ic_positive"/>

                <TextView
                    android:id="@+id/totalNegative"
                    style="@style/statTitle"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Postive"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:background="@drawable/circle_drawable"
                    android:gravity="center"
                    android:foregroundGravity="center"
                    android:textColor="@color/white_fade"
                    android:backgroundTint="@color/stat_screen1"
                    android:id="@+id/positiveText"
                    style="@style/cardText"
                    android:text="0"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/totalPostive"
                    android:src="@drawable/ic_negative"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Negative"
                    style="@style/statTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/totalPostive"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:background="@drawable/circle_drawable"
                    android:gravity="center"
                    android:foregroundGravity="center"
                    android:textColor="@color/white_fade"
                    android:backgroundTint="@color/stat_screen2"
                    android:id="@+id/negativeText"
                    style="@style/cardText"
                    android:text="0"/>
            </RelativeLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLine1">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="3dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/totalQuarantined"
                    android:src="@drawable/ic_house"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Quarantined"
                    style="@style/statTitle"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/totalQuarantined"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:background="@drawable/circle_drawable"
                    android:gravity="center"
                    android:textColor="@color/white_fade"
                    android:backgroundTint="@color/stat_screen4"
                    android:layout_height="wrap_content"
                    android:id="@+id/qurantineTotal"
                    style="@style/cardText"
                    android:text="0"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/totalIsolated"
                    android:src="@drawable/ic_isolation"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Isolated"
                    style="@style/statTitle"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/totalIsolated"
                    />

                <TextView
                    android:id="@+id/isolationText"
                    style="@style/cardText"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/circle_drawable"
                    android:backgroundTint="@color/stat_screen5"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white_fade" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@id/totalPPE"
                    android:src="@drawable/ic_ppe"/>

                <TextView
                    android:id="@+id/totalPPE"
                    style="@style/statTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="PPE"
                    android:textSize="10sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:background="@drawable/circle_drawable"
                    android:gravity="center"
                    android:foregroundGravity="center"
                    android:textColor="@color/white_fade"
                    android:backgroundTint="@color/stat_screen6"
                    style="@style/cardText"
                    android:id="@+id/ppeText"
                    android:text="0"/>
            </RelativeLayout>


        </LinearLayout>



    </RelativeLayout>


</androidx.cardview.widget.CardView>
